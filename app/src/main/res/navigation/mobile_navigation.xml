<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_listar">

    <fragment
        android:id="@+id/nav_listar"
        android:name="com.example.tp3_productos.ui.listar.ListarFragment"
        android:label="Lista de Productos"
        tools:layout="@layout/fragment_listar" />

    <fragment
        android:id="@+id/nav_cargar"
        android:name="com.example.tp3_productos.ui.cargar.CargarFragment"
        android:label="@string/cargar"
        tools:layout="@layout/fragment_cargar" />

    <fragment
        android:id="@+id/nav_buscar"
        android:name="com.example.tp3_productos.ui.buscar.BuscarFragment"
        android:label="Buscar"
        tools:layout="@layout/fragment_buscar" >
        <action
            android:id="@+id/action_nav_buscar_to_resultadoBuscarFragment"
            app:destination="@id/resultadoBuscarFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.tp3_productos.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/resultadoBuscarFragment"
        android:name="com.example.tp3_productos.ui.buscar.ResultadoBuscarFragment"
        android:label="@string/resulatado_de_busqueda"
        tools:layout="@layout/fragment_resultado_buscar" >
        <action
            android:id="@+id/action_resultadoBuscarFragment_to_nav_buscar"
            app:destination="@id/nav_buscar" />
    </fragment>
</navigation>